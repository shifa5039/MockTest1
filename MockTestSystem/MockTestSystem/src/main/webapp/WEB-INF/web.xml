<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
         version="3.1">

    <display-name>MockTestSystem</display-name>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.mocktest.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!-- Add Question Servlet -->
    <servlet>
        <servlet-name>AddQuestionServlet</servlet-name>
        <servlet-class>com.mocktest.AddQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddQuestionServlet</servlet-name>
        <url-pattern>/AddQuestionServlet</url-pattern>
    </servlet-mapping>

    <!-- View Questions Servlet -->
    <servlet>
        <servlet-name>ViewQuestionsServlet</servlet-name>
        <servlet-class>com.mocktest.ViewQuestionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewQuestionsServlet</servlet-name>
        <url-pattern>/ViewQuestionsServlet</url-pattern>
    </servlet-mapping>

    <!-- Edit Question Servlet -->
    <servlet>
        <servlet-name>EditQuestionServlet</servlet-name>
        <servlet-class>com.mocktest.EditQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditQuestionServlet</servlet-name>
        <url-pattern>/EditQuestionServlet</url-pattern>
    </servlet-mapping>


<servlet>
    <servlet-name>UpdateQuestionServlet</servlet-name>
    <servlet-class>com.mocktest.UpdateQuestionServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>UpdateQuestionServlet</servlet-name>
    <url-pattern>/UpdateQuestionServlet</url-pattern>
</servlet-mapping>

    <!-- Delete Question Servlet -->
    <servlet>
        <servlet-name>DeleteQuestionServlet</servlet-name>
        <servlet-class>com.mocktest.DeleteQuestionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteQuestionServlet</servlet-name>
        <url-pattern>/DeleteQuestionServlet</url-pattern>
    </servlet-mapping>

    <!-- Start Test Servlet -->
    <servlet>
        <servlet-name>StartTestServlet</servlet-name>
        <servlet-class>com.mocktest.StartTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartTestServlet</servlet-name>
        <url-pattern>/StartTestServlet</url-pattern>
    </servlet-mapping>

    <!-- Submit Test Servlet -->
    <servlet>
        <servlet-name>SubmitTestServlet</servlet-name>
        <servlet-class>com.mocktest.SubmitTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubmitTestServlet</servlet-name>
        <url-pattern>/SubmitTestServlet</url-pattern>
    </servlet-mapping>

    <!-- View Results Servlet -->
    <servlet>
        <servlet-name>ViewResultsServlet</servlet-name>
        <servlet-class>com.mocktest.ViewResultsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewResultsServlet</servlet-name>
        <url-pattern>/ViewResultsServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.mocktest.LogoutServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
</servlet-mapping>
    

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>

 